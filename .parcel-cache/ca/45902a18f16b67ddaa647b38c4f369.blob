body {
    font-family: sans-serif;
}

div {
    padding: 0.5em;
}

[data-meta-superficial-name='raw'] {
    display: none;
}

[data-meta-superficial-name='type'] {
    background-color: lightgrey;
    border-radius: 0.5em;
}

[data-meta-superficial-name='name'] {
    background-color: cornflowerblue;
    border-radius: 0.5em;

    color: white;
}

[data-meta-superficial-name='loc'],
[data-meta-superficial-name='source'],
[data-meta-superficial-name='start'],
[data-meta-superficial-name='end'] {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: flex-start;
}
